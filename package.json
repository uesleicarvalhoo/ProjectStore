{
  "name": "store",
  "version": "0.0.0",
  "description": "E-commerce",
  "scripts": {
    "tailwind": "tailwindcss build -i  src/web/static/base/css/main.css -o src/web/static/css/main.css",
    "build": "env NODE_ENV=production postcss src/web/static/base/css/main.css -o src/web/static/css/main.css",
    "cz": "git-cz",
    "release": "release-it"
  },
  "author": "Estevan Maito <ejmaito@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@release-it/conventional-changelog": "1.1.4",
    "@tailwindcss/custom-forms": "0.2.1",
    "autoprefixer": "9.8.0",
    "color": "3.1.2",
    "commitizen": "^4.2.4",
    "cssnano": "4.1.10",
    "cz-conventional-changelog": "3.2.0",
    "postcss-cli": "7.1.1",
    "release-it": "^13.7.2",
    "tailwindcss": "^2.2.7",
    "tailwindcss-multi-theme": "1.0.3"
  },
  "keywords": [
    "tailwind",
    "windmill",
    "dashboard",
    "template",
    "admin"
  ],
  "release-it": {
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
